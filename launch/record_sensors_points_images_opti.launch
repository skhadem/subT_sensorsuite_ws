<launch>
    <arg name="name" doc="specify the name of the bag file to be saved" />
    
    <node pkg="rosbag" type="record" name="record_sensors"
      args="record -O /home/arpglab/subT_sensorsuite_ws/bag/$(arg name) /tf
      /tf_static /vrpn_client_node/radar-mount/pose /mmWaveDataHdl/RScan /scan
      /camera/depth/color/points /camera/color/camera_info /camera/color/image_raw
      /camera/depth/camera_info /camera/depth/image_rect_raw
      /camera/extrinsics/depth_to_color" />
</launch>
